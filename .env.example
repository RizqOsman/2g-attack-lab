# Osmocom VTY Configuration
VTY_HOST=localhost
VTY_MSC_PORT=4242  # Osmo-MSC/NITB VTY port
VTY_BTS_PORT=4241  # Osmo-BTS VTY port
VTY_TIMEOUT=10     # Connection timeout in seconds

# Database Configuration
HLR_DATABASE_PATH=/var/lib/osmocom/hlr.sqlite3

# Log Monitoring Configuration
OSMOCOM_LOG_PATH=/var/log/osmocom/osmo-nitb.log
# Alternative log path if using syslog:
# OSMOCOM_LOG_PATH=/var/log/syslog

# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=8000
DEBUG_MODE=False

# Service Check Commands (for status endpoint)
PLUTO_SDR_CHECK_CMD=lsmod | grep -i pluto
OSMOCOM_SERVICE_NAME=osmo-nitb
# Alternative for systemd-based systems:
# OSMOCOM_SERVICE_NAME=osmo-msc
